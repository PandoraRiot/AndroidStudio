<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#E13333"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".Pantalla2Activity">

    <Button
        android:id="@+id/button3"
        android:layout_width="374dp"
        android:layout_height="45dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#E63030"
        android:text="@string/btnReserva"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSipnosis" />

    <EditText
        android:id="@+id/etPelicula"
        android:layout_width="334dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/etPelicula"
        android:textAllCaps="false"
        android:textColor="#AA1B1B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPelicula" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="116dp"
        android:layout_height="43dp"
        android:layout_marginStart="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/tvSinopsis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Img" />

    <EditText
        android:id="@+id/etSipnosis"
        android:layout_width="372dp"
        android:layout_height="140dp"
        android:layout_marginStart="4dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <WebView
        android:id="@+id/wv1"
        android:layout_width="32dp"
        android:layout_height="25dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="153dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button2"
        android:layout_width="374dp"
        android:layout_height="45dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#E63030"
        android:onClick="trailer"
        android:text="@string/btnTrailer"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSipnosis" />

</androidx.constraintlayout.widget.ConstraintLayout>